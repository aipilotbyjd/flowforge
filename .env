ENCRYPTION_KEY="your-32-character-encryption-key!"
HASH_ROUNDS=12
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# ==============================================================================
# EMAIL CONFIGURATION
# ==============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@flowforge.dev"

# ==============================================================================
# MESSAGE QUEUE CONFIGURATION
# ==============================================================================
RABBITMQ_URL="amqp://flowforge:flowforge123@localhost:5672"
QUEUE_WORKFLOW_EXECUTION="workflow-execution"
QUEUE_NODE_EXECUTION="node-execution"
QUEUE_WEBHOOK_PROCESSING="webhook-processing"
QUEUE_NOTIFICATION_DELIVERY="notification-delivery"
QUEUE_ANALYTICS_PROCESSING="analytics-processing"

# ==============================================================================
# OBSERVABILITY CONFIGURATION
# ==============================================================================
LOG_LEVEL="info"
LOG_FORMAT="json"
METRICS_ENABLED=true
METRICS_PORT=9464
TRACING_ENABLED=true
