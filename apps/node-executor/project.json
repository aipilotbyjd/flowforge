{
  "name": "node-executor",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/node-executor/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/node-executor",
        "main": "apps/node-executor/src/main.ts",
        "tsConfig": "apps/node-executor/tsconfig.app.json",
        "assets": ["apps/node-executor/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "apps/node-executor/webpack.config.js"
      },
      "configurations": {
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/node-executor/src/environments/environment.ts",
              "with": "apps/node-executor/src/environments/environment.development.ts"
            }
          ]
        },
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/node-executor/src/environments/environment.ts",
              "with": "apps/node-executor/src/environments/environment.production.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "node-executor:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "node-executor:build:development"
        },
        "production": {
          "buildTarget": "node-executor:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/node-executor/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/node-executor/jest.config.ts"
      }
    }
  },
  "tags": ["type:app", "scope:node-executor"]
}
