{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["eslint.config.js", "eslint.config.cjs", "eslint.config.mjs"],
  "references": [
    {
      "path": "../../libs/core/types/tsconfig.lib.json"
    },
    {
      "path": "../../libs/observability/logging/tsconfig.lib.json"
    },
    {
      "path": "../../libs/security/rbac/tsconfig.lib.json"
    },
    {
      "path": "../../libs/workflow-engine/validator/tsconfig.lib.json"
    },
    {
      "path": "../../libs/workflow-engine/compiler/tsconfig.lib.json"
    },
    {
      "path": "../../libs/workflow-engine/executor/tsconfig.lib.json"
    },
    {
      "path": "../../libs/security/auth/tsconfig.lib.json"
    },
    {
      "path": "../../libs/core/entities/tsconfig.lib.json"
    },
    {
      "path": "../../libs/data-access/repositories/tsconfig.lib.json"
    },
    {
      "path": "../../libs/data-access/database/tsconfig.lib.json"
    }
  ]
}
