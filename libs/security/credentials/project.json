{
  "name": "security-credentials",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/security/credentials/src",
  "projectType": "library",
  "tags": ["scope:security", "type:feature"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/security/credentials",
        "main": "libs/security/credentials/src/index.ts",
        "tsConfig": "libs/security/credentials/tsconfig.lib.json",
        "assets": ["libs/security/credentials/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/security/credentials/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/security/credentials/jest.config.ts"
      }
    }
  }
}
