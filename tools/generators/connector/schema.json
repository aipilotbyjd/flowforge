{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Connector",
  "title": "Connector Generator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the connector",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "type": {
      "type": "string",
      "description": "The type of connector",
      "enum": ["http", "database", "cloud", "messaging", "email"],
      "default": "http"
    },
    "directory": {
      "type": "string",
      "description": "The directory to generate the connector in",
      "default": "libs/connectors"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    }
  },
  "required": ["name"]
}
